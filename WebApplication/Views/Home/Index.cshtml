@using Profiles.Business;
@model ProfileCollection

@{
    ViewBag.Title = "Profile Home Page";
}

<div style="width:580px;display:inline-block">

    <table>
        <tbody>
            <tr>
                <td colspan="2">
                    <div style="padding: 37px 60px 16px 0px;">
                        <span class="formText07" style="color: #000000; font-size: 36px; letter-spacing: 0px; line-height: 39px;">
                            SPIE Profiles is an Optics and Photonics networking Platform for Professionals
                        </span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="formText01" style="color: #000000; font-size: 20px;">Search Profiles</span> <br>
                    <input name="txtSearch" type="text" maxlength="100" id="txtSearch" class="formFieldCommon inputSearch" style="float:left;font-size:18px;height:30px;padding:4px;  border: solid 1px #bfc0c1;">
                    <a id="hSearch" style="height:30px;cursor:pointer;" onmouseout="document.getElementById('imgSearch').src='/images/MagGlass_Btn_Norm.jpg';" onmouseover="document.getElementById('imgSearch').src='/images/MagGlass_Btn_Over.jpg';"><img id="imgSearch" src="/images/MagGlass_Btn_Norm.jpg" border="0"></a>
                </td>

                <td>
                    <span class="formText01" style="color: #000000; font-size: 20px;">New to SPIE Profiles?</span> <br>
                    <a id="ctl00_Main_hCreateAccount" class="SignUp" href="/account/create/accountinfo">Sign Up</a>
                    <span class="formText07" style="font-size: 15px;">Create your profile today! <br>It's free and easy.</span>

                </td>


            </tr>


        </tbody>



    </table>


    <div style="background-color: #cb232a; height: 2px; width: 568px; margin-top: 20px;">
    </div>

    <div class="formText01" style="color: #000000; font-size: 20px; margin-top: 20px; margin-bottom: 10px;">Going Mobile</div>

    <table>

        <tr>

            <td>
                <div style="width: 302px;">
                    <div style="height: 98px; width: 290px; background-color: #ededee;">
                        <div style="padding: 17px 0px 0px 12px;">
                            <table border=0 cellpadding=0 cellspacing=0 style="background-color: Transparent;">
                                <tr>
                                    <td align=left valign=top>
                                        <a href="http://itunes.apple.com/us/app/spie-profiles/id384217246?mt=8"><img id=imgProfilesApp src="/images/ProfilesApp_norm.jpg" alt="SPIE Profiles App" height=70 width=70 border=0 /></a>
                                    </td>
                                    <td align=left valign=top>
                                        <div style="padding-left: 6px; padding-top: 3px;">
                                            <span class="formText01" style="font-size: 23px; font-weight: normal; color: #000000;">SPIE Profiles App</span> <br />
                                            <span class="formText07" style="font-size: 15px; margin-top: -1px;">Easy access to SPIE profiles</span> <br />
                                            <a href="http://itunes.apple.com/us/app/spie-profiles/id384217246?mt=8" class="" style="font-size: 15px;">Free Download</a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </td>

            <td>
                <div style="width: 278px;">
                    <div style="height: 98px; width: 266px; background-color: #ededee;">
                        <div style="padding: 17px 0px 0px 12px;">
                            <table border=0 cellpadding=0 cellspacing=0 style="background-color: Transparent;">
                                <tr>
                                    <td align=left valign=top>
                                        <a href="http://itunes.apple.com/us/app/spie-conferences/id349678364?mt=8" onmouseover="document.getElementById('imgConfApp').src='/images/ConfApp_Over.jpg';" onmouseout="document.getElementById('imgConfApp').src='/images/ConfApp_norm.jpg';"><img id=imgConfApp src="/images/ConfApp_norm.jpg" alt="SPIE Conference App" height=70 width=70 border=0 /></a>
                                    </td>
                                    <td align=left valign=top>
                                        <div style="padding-left: 6px; padding-top: 3px;">
                                            <span class="formText01" style="font-size: 23px; font-weight: normal; color: #000000;">Conference App</span> <br />
                                            <span class="formText07" style="font-size: 15px; margin-top: -1px;">Get convenient updates</span> <br />
                                            <a href="http://itunes.apple.com/us/app/spie-conferences/id349678364?mt=8" class="" style="font-size: 15px;">Free Download</a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </td>


        </tr>


    </table>






</div>

<div style="display:inline-block;vertical-align:top;background-color:#ededee;margin-top:10px;padding: 5px 10px 10px 10px;width: 335px;">



    <span class="formText01" style="color: #000000; font-size: 20px;">Who's using SPIE Profiles?</span>

    <div style="background-color: #000000; height: 8px; width: 316px;">
    </div>

    @foreach (var profile in Model.ProfileList.Take(3))
    {
        <div style="margin: 10px 0px;">

            <img id="imagePerson" title="@profile.FirstName" alt="@profile.FirstName" src="/images/profilepictures/@profile.PictureFileName" height="72" width="56" style="border-width:0px;display:inline-block;" />

            <div style="display:inline-block;vertical-align:top;height:72px;width:220px;margin-left: 20px;">
                <div>
                    <a target="_blank" href="/profiles/view/@profile.ID">@profile.FirstName @profile.LastName </a>
                </div>
                <div>
                    @profile.Company <br />
                    @profile.SPIERole
                </div>

            </div>
        </div>
        <div style="height: 1px; width: 316px; background-color: #bfc0c1;"></div>
    }
</div>